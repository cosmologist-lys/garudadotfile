// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
      "ctrl-y": "editor::DeleteLine", // 删除整行
      "ctrl-alt-left": "pane::GoBack", // 后退
      "ctrl-alt-right": "pane::GoForward", //前进
      "ctrl-alt-l": "editor::Format",  // 格式化代码
      "ctrl-alt-o": "editor::OrganizeImports" // 删除未使用的引用
    }
  }
]
